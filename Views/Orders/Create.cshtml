@model CarShop.Models.Database.Order

@{
    ViewData["Title"] = "Złóż Zamówienie";
}

<div class="container">
    <h2>Złóż Zamówienie</h2>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label for="CarId">Samochód</label>
            <select asp-for="CarId" class="form-control" asp-items="ViewBag.Cars">
                <option value="">-- Wybierz samochód --</option>
            </select>
        </div>
        <div class="form-group">
            <label for="UserId">Użytkownik</label>
            <select asp-for="UserId" class="form-control" asp-items="ViewBag.Users">
                <option value="">-- Wybierz użytkownika --</option>
            </select>
        </div>
        <div class="form-group">
            <label for="OrderDate">Data zamówienia</label>
            <input type="date" asp-for="OrderDate" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary mt-3">Złóż zamówienie</button>
    </form>
</div>
