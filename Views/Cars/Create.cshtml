@model CarShop.Models.Database.Car

@{
    ViewData["Title"] = "Dodaj Samochód";
}

<div class="container">
    <h2>Dodaj Nowy Samochód</h2>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label for="Name">Marka</label>
            <input type="text" asp-for="Make" class="form-control" placeholder="Wprowadź marke samochodu" />
            <span asp-validation-for="Make" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Year">Model</label>
            <input type="text" asp-for="Model" class="form-control" placeholder="Wprowadź model samochodu" />
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Price">Cena</label>
            <input type="number" asp-for="Price" class="form-control" placeholder="Wprowadź cenę samochodu" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Dodaj samochód</button>
    </form>
</div>
